@model CategoryModel

<h2>Create a new category</h2>
@Html.ValidationSummary()
<form class="form-horizontal" asp-controller="Category" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name"/>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ParentId" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="ParentId"/>
        </div>
    </div>
    <div class="form-group">

        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Save</button>
        </div>
    </div>
</form>

