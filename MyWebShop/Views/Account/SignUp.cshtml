@model UserModel
@{
    ViewData["Title"] = "SignUp";
}

<h2>Create a new account</h2>

@Html.ValidationSummary()

<form class="form-horizontal" asp-controller="Account" asp-action="SignUp" method="post">
    <div class="form-group">
        <label asp-for="Email" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Email" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Password" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="PasswordRepeat" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="PasswordRepeat" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Sign up</button>
        </div>
    </div>
</form>

