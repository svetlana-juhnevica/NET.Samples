@model ItemModel
@{
    ViewData["Title"] = "Add new item";
}

<h2>Add new item</h2>
@Html.ValidationSummary()
<form class="form-horizontal" asp-controller="Item" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Name">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Price">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Description">
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Location" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Location">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="CategoryName" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="CategoryName">
        </div>
    </div>
    <div class="form-group">

        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default">Save</button>
        </div>
    </div>
</form>

